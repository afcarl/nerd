<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration>
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm.ss} [%-5p] %-25c{1} - %m\n"/>
        </layout>
    </appender>

    <appender name="RANKER" class="org.apache.log4j.FileAppender">
        <param name="file" value="ranker.log"/>
        <param name="immediateFlush" value="true"/>
        <param name="threshold" value="debug"/>
        <param name="append" value="false"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm.ss} [%-5p] %-25c{1} - %m\n"/>
        </layout>
    </appender>

    <appender name="SELECTOR" class="org.apache.log4j.FileAppender">
        <param name="file" value="selector.log"/>
        <param name="immediateFlush" value="true"/>
        <param name="threshold" value="debug"/>
        <param name="append" value="false"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm.ss} [%-5p] %-25c{1} - %m\n"/>
        </layout>
    </appender>
    
    <logger name="com.scienceminer.nerd.disambiguation.NerdSelector" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="SELECTOR" />
    </logger>

    <logger name="com.scienceminer.nerd.disambiguation.NerdRanker" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="RANKER" />
    </logger>

    <root>
        <priority value="INFO"></priority>
        <appender-ref ref="CONSOLE"/>
    </root>
</log4j:configuration>